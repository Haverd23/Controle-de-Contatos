@using Estados.Enums
@model EstadoModel
@{
    ViewData["Title"] = "Criar Usuario";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar usuario</h1>
</div>

<form asp-controller="Estado" asp-action="Criar" method="post">


    <div class="form-group">
        <label asp-for="Name" class="form-label">Nome</label>
        <input asp-for="Name" class="form-control" placeholder="Digite o nome do usuario">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Idade" class="form-label"></label>
        <input asp-for="Idade" class="form-control" placeholder="Digite a Idade do usuario">
        <span asp-validation-for="Idade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Login" class="form-label"></label>
        <input asp-for="Login" class="form-control" placeholder="Digite o login do usuario">
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Senha" class="form-label"></label>
        <input asp-for="Senha" class="form-control" type="password" placeholder="Digite a senha do usuario">
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estado" class="form-label"></label>
        <select asp-for="Estado" class="mb-3 form-control">
            <option value="">Selecione</option>
            @foreach (var estado in Enum.GetValues(typeof(EstadoEnum)).Cast<EstadoEnum>())
            {
                <option value="@estado">@estado.ToString()</option>
            }
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cidade" class="form-label"></label>
        <input asp-for="Cidade" class="form-control"  placeholder="Digite a Cidade">
        <span asp-validation-for="Cidade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Perfil" class="form-label"></label>
        <select asp-for="Perfil" class="mb-3 form-control">
            <option value="">Selecione</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>
            <option value="@PerfilEnum.Admin">Adminstrador</option>
        </select>
        <span asp-validation-for="Perfil" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-action="Index" asp-controller="Estado" role="button">Voltar</a>
</form>
